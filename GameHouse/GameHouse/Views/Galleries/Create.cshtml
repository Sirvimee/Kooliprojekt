@model GameHouse.Data.Gallery

@{
    ViewData["Title"] = "Create";
}

<br />
<div class="container text-center">
    <section>

        <form asp-action="Create" id="account" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <br />
                <input asp-for="ImageFile" class="form-control text-center" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <select asp-for="NameId" class="form-control text-center" asp-items="ViewBag.NameId"></select>
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" value="LISA" class="btn btn-warning" />
            </div>
        </form>
        <br />

        <div>
            <a asp-action="Index" type="submit" value="TAGASI" class="btn btn-danger">TAGASI GALERIISSE</a>
        </div>
        <br />
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
